{
  "name": "@flowcore/sdk-transformer-core",
  "description": "A core library that facilitates writing transformers and business logic services that utilise the flowcore paradigm",
  "license": "MIT",
  "version": "0.0.1",
  "type": "commonjs",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "url": "https://github.com/flowcore-io/library-sdk-transformer-core-ts.git",
    "type": "git"
  },
  "keywords": [
    "flowcore",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "build:watch": "chokidar 'src/**/*.ts' -c 'yarn build'",
    "prebuild": "rimraf dist",
    "build": "swc src -d dist && tsc -p tsconfig.build.json --emitDeclarationOnly && copyfiles package.json dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "reconfigure": "commitizen init cz-conventional-changelog --yarn --dev --exact --force"
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.92",
    "@swc/jest": "0.2.29",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.15",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "commitizen": "4.2.6",
    "copyfiles": "2.4.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "jest-junit": "15.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "peerDependencies": {}
}
