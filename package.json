{
  "name": "@flowcore/sdk-transformer-core",
  "description": "A core library that facilitates writing transformers and business logic services that utilise the flowcore paradigm",
  "license": "MIT",
  "version": "1.7.1",
  "type": "commonjs",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "url": "https://github.com/flowcore-io/library-sdk-transformer-core-ts.git",
    "type": "git"
  },
  "keywords": [
    "flowcore",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "build:watch": "chokidar 'src/**/*.ts' -c 'yarn build'",
    "prebuild": "rimraf dist",
    "build": "swc src -d dist && tsc -p tsconfig.build.json --emitDeclarationOnly && copyfiles package.json dist",
    "format": "biome format",
    "lint": "biome lint",
    "format:fix": "biome format --write",
    "lint:fix": "biome lint --write",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "reconfigure": "commitizen init cz-conventional-changelog --yarn --dev --exact --force"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.92",
    "@swc/jest": "0.2.29",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.15",
    "@types/supertest": "2.0.12",
    "commitizen": "4.2.6",
    "concurrently": "^8.2.1",
    "copyfiles": "2.4.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "jest-junit": "15.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "1.7.2",
    "ioredis": "5.4.1",
    "radash": "12.1.0",
    "zod": "3.23.8"
  },
  "peerDependencies": {}
}
